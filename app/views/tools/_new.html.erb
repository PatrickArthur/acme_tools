<%= form_for [Tool.new()], class: "data_form" do |f| %>
<legend>Fill in and Click Submit to Deploy</legend>

<div class = "form-group">
  <%= f.label :name, class: "col-sm-4 control-label", for: "name"%>
  <div class="col-sm-8">
    <%= f.select(:name, @select_menu , {prompt: "Please Select"}, { :class => 'form-control' } ) %>
  </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-4 control-label", for: "name"%>
  <div class="col-sm-8">
    <%= f.text_area :description, class: "form-control", rows: "5" %></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :quantity, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.number_field :quantity, class: "form-control"%></br>
  </div>
</div>

<div class="col-sm-offset-5 col-sm-5" style="height:75px;">
  <%= f.submit "submit", class: "btn btn-primary" %>
</div>
<% end %>
